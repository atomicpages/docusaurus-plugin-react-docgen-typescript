{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
